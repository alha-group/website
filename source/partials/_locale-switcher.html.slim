- block_class ||= nil
- complete_label ||= false

div class=block_class
  div class="#{block_class}__switcher"= I18n.locale
  div class="#{block_class}__dropdown"
    - localized_paths_for(current_page).each do |locale, path|
      =< link_to complete_label ? I18n.t("locales_label.#{locale}") : locale,
        "#{ENV['BASE_URL']}#{path}",
        class: "#{block_class}__link #{'is-current' if locale == I18n.locale}"
